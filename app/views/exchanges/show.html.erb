<%= render "shared/modal-turbo" do %>
  <div class="d-flex flex-column align-items-center">

    <div class="justify-text-center align-center">
      <div class="text-white bg-warning bg-gradient text-center py-1 mb-2 rounded-3" style="width: 100px">
        <strong>AGUARDE</strong>
      </div>
      <% if @exchange.request.request_type == "Folgar" %>
        <h4> Você pediu para trabalhar no lugar <%= @exchange.request.user.first_name.capitalize %> </h4>
      <% elsif @exchange.request.request_type == "Trabalhar" %>
        <h4> Você cedeu dias de trabalho para <%= @exchange.request.user.first_name.capitalize %> </h4>
      <% else @exchange.request.request_type == "Trocar" %>
        <h4> Você quer trocar com <%= @exchange.request.user.first_name.capitalize %> </h4>
      <% end %>
      <p> <i class="fa-regular fa-calendar"></i> <%= l @exchange.request.start_time, format: :short %> <i class="fa-solid fa-arrow-right"></i> <%= l @exchange.request.end_time, format: :short %> </p>
      <p> <i class="fa-solid fa-location-dot"></i> <%= @exchange.request.origin %> <i class="fa-solid fa-arrow-right"></i> <%= @exchange.request.destination %> </p>
    </div>

    <div class="justify-text-center align-center gap-2">
      <label class="btn avatar-photo">
        <% if @exchange.request.user.avatar.attached? %>
          <%= cl_image_tag @exchange.request.user.avatar.key %>
        <% else %>
          <%= image_tag "https://i1.sndcdn.com/avatars-000255771415-dx5rag-t200x200.jpg"%>
        <% end %>
      </label>
      <p class="text-center"><i class="fa-solid fa-user"></i> <strong><%= @exchange.request.user.first_name.capitalize %></strong> precisa aprovar!</p>
    </div>

    <div class="d-flex flex-column align-items-center mt-3">
      <p><strong>Entrar em contato:</strong></p>
      <div id="whatsapp" class="whatsapp mt-3">
        <a
          href='https://api.whatsapp.com/send?phone=<%= @request.user.phone %>&text=&text=Envie%20sua%20mensagem%20para%20<%= @request.user.first_name %>'
          target="_blank"
          title="Fale conosco pelo Whatsapp"
          class="btn btn-whatsapp"
          rel="noopener">
          <span class="fa-brands fa-whatsapp"></span>
        </a>
      </div>
    </div>
  </div>
<% end %>
