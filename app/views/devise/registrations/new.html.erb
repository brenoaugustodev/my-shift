<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
  <%= f.error_notification %>
<section class="h-100 bg-dark">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col mt-3">
        <div class="card card-registration my-4">
          <div class="row g-0">
            <div class="col-xl-6 d-none d-xl-block">
              <img class ="photo" src="https://d.newsweek.com/en/full/2088023/flight-attendants-boarding-plane.jpg?w=1600&h=1600&q=88&f=749d63efa4b2323faba0094b8b696e15"
                alt="Sample photo" class="img-fluid"
                style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
            </div>
            <div class="col-xl-6">
              <div class="card-body p-md-5 text-black">
            <%= link_to root_path do %>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Fechar"></button>
            <% end %>
                <h3 class="mb-5 text-uppercase">Cadastre-se</h3>

                <div class="form-inputs">
                  <%= f.input :first_name,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "name" },
                              label: 'Nome'%>
                  <%= f.input :last_name,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "last name" },
                              label: 'Sobrenome'%>
                  <%= f.input :cpf,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "CPF" },
                              label: 'CPF'%>
                  <%= f.input :re,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "RE" },
                              label: 'R.E.'%>
                  <%= f.input :phone,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "phone" },
                              label: 'Telefone celular'%>
                  <%= f.input :email,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" },
                              label: 'Email'%>
                  <%= f.input :password,
                              required: true,
                              hint: ("Mínimo de #{@minimum_password_length} caracteres" if @minimum_password_length),
                              input_html: { autocomplete: "new-password" },
                              label: 'Senha'%>
                  <%= f.input :password_confirmation,
                              required: true,
                              input_html: { autocomplete: "new-password" },
                              label: 'Confirmação de senha'%>
                  <%= f.association :company,
                              collection: Company.all,
                              required: true,
                              autofocus: true,
                              input_html: { autocomplete: "email" },
                              label: 'Companhia' %>
                  <%= f.file_field :avatar %>
                </div>

                <div class="form-actions">
                  <%= f.button :submit, "Enviar", class: 'btn-main mt-3' %>
                </div>
              <% end %>

              <%# <%= link_to "Log in", sign_in_path %>
              <%# <%= render "devise/shared/links" %>

              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>


