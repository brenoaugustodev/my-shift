<div class="container">

  <%= simple_form_for(request) do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="d-flex justify-content-around mt-5 mb-5" id="form-bg">
      <div>
          <%= f.input :request_type, as: :select, class: "chosen-select", collection: ["Folga", "Troca", "Extra"], prompt: 'Selecione', label: 'Tipo de requisição' %>
          <%= f.input :start_time, placeholder: 'start_time', label: 'Ida' %>
          <%= f.input :end_time, placeholder: 'end_time', label: 'Volta' %>
          <%= f.input :origin, placeholder: 'São Paulo', label: 'Origem' %>
          <%= f.input :destination, placeholder: 'Rio de Janeiro', label: 'Destino' %>
          <%= f.input :available, placeholder: 'available' %>
          <%= f.submit class: 'btn btn-primary hover:text-primary rounded-pill shadow-sm border px-4' %>
          <%=link_to "Back to Home", "/", class: 'btn btn-primary hover:text-primary rounded-pill shadow-sm border px-4'%>
      </div>
    </div>
  <% end %>
</div>
