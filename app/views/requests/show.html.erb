<%= render "shared/modal-turbo" do %>
  <div class="container mt-5">
    <h1>Request</h1>

    <p>Nome: <%= @request.user.first_name %></p>
    <p>Sobrenome: <%= @request.user.last_name %></p>
    <p>Tipo de requisicao: <%= @request.request_type %></p>
    <p>Origem: <%= @request.origin %></p>
    <p>Destino: <%= @request.destination %></p>

    <div class="d-flex gap-3">
      <% if policy(@request).edit? %>
        <%= link_to "Editar minha requisição", edit_request_path(@request), class: "btn btn-primary" if policy(@request).edit?%>
        <%= button_to "Destruir minha requisição", @request, class: "btn btn-danger", method: :delete if policy(@request).destroy?%>
      <% end %>
    </div>
    <div>
      <%= link_to "Quero essa escala", new_request_exchange_path(@request), class: "btn btn-primary"%>
    </div>
  </div>
<% end %>
