<%= render "shared/modal-turbo" do %>
  <%= simple_form_for @request, html: { class: "mt-3", data: { controller: 'flatpickr', turbo: true, turbo_frame: 'modal' } } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <div class="d-flex justify-content-around mt-5 mb-5" id="form-bg">
      <div>
          <%= f.input :request_type, as: :select, class: "chosen-select", collection: Request::REQUEST_TYPE, prompt: 'Selecione', label: 'Tipo de requisição' %>
          <%= f.input :start_time, placeholder: '00-00-0000', label: 'Ida', as: :string, input_html: { data: { 'flatpickr-target': "startTime" } } %>
          <%= f.input :end_time, placeholder: '00-00-0000', label: 'Volta', as: :string, input_html: { data: { 'flatpickr-target': "endTime" } } %>
          <%= f.input :origin, placeholder: 'São Paulo', label: 'Origem' %>
          <%= f.input :destination, placeholder: 'Rio de Janeiro', label: 'Destino' %>
          <%= f.submit class: 'btn btn-primary hover:text-primary rounded-pill shadow-sm border px-4', input_html: { data: { 'flatpickr-target': "btnSubmit" } }%>
      </div>
    </div>
  <% end %>
<% end %>
