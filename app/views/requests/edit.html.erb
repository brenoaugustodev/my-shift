<%= render "shared/modal-turbo" do %>
  <%= simple_form_for @request, html: { class: "mt-3", data: { turbo: true, turbo_frame: 'modal' } } do |f| %>
    <%= f.input :request_type,
                as: :select,
                collection: ["Folga", "Troca", "Extra"],
                label: false,
                autofocus: true %>
    <%= f.input :origin,
                as: :text,
                label: false,
                autofocus: true %>
    <%= f.input :destination,
                as: :text,
                label: false,
                autofocus: true %>
    <%= f.submit class: "btn-capsule-sm btn-outline-gold mt-3" %>
  <% end %>
<% end %>
