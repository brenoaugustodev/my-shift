<%= render "shared/modal-turbo" do %>
  <%= simple_form_for @request, html: { class: "mt-3", data: { controller: 'flatpickr', turbo: true, turbo_frame: 'modal' } } do |f| %>
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

    <%= f.input :request_type,
                as: :select,
                select: @request.request_type,
                collection: Request::REQUEST_TYPE,
                label: false,
                autofocus: true %>
    <%= f.input :origin,
                as: :text,
                label: false,
                autofocus: true %>
    <%= f.input :destination,
                as: :text,
                label: false,
                autofocus: true %>
    <%= f.input :start_time,
                label: 'Ida',
                as: :string,
                prefixe: @request.start_time,
                input_html: { data: { 'flatpickr-target': "startTime" } } %>
    <%= f.input :end_time,
                label: 'Volta',
                as: :string,
                placeholder: @request.end_time,
                input_html: { data: { 'flatpickr-target': "endTime" } } %>
    <%= f.submit class: "btn-capsule-sm btn-outline-gold mt-3" %>
  <% end %>
<% end %>
